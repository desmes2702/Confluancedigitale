---
import MainLayout from "../layouts/MainLayout.astro";
import { ReservationHero } from "../components/islands/ReservationHero";
import { ReservationBenefits } from "../components/features/ReservationBenefits";
import { ReservationForm } from "../components/islands/ReservationForm";
---

<MainLayout
    title="Réservation Prioritaire | Confluence Digitale"
    description="Finalisez votre réservation d'exclusivité territoriale. Un conseiller vous rappelle sous 24h."
>
    {/* 1. HERO SECTION */}
    <section class="relative pt-28 lg:pt-32 pb-12 md:pb-16 px-4 bg-[#F9FAFB]">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <ReservationHero client:load />
        </div>
    </section>

    {/* 2. BLOC RAPPEL DE VALEUR */}
    <section class="relative py-8 sm:py-12 md:py-16 px-4 bg-[#F9FAFB]">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto">
                <ReservationBenefits client:visible />
            </div>
        </div>
    </section>

    {/* 3. FORMULAIRE PRIORITAIRE */}
    <section class="relative py-8 sm:py-12 md:py-16 px-4 bg-white">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto">
                <ReservationForm client:visible />
            </div>
        </div>
    </section>
</MainLayout>
