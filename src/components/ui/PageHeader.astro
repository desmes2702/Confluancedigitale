---
interface Props {
    title: string;
    highlight?: string;
    subtitle?: string;
    backgroundImage?: string;
}

const { title, highlight, subtitle, backgroundImage } = Astro.props;
---

<section class="relative pt-32 pb-20 px-4 overflow-hidden bg-[#F9FAFB]">
    {/* Decorative background */}
    <div
        class="absolute top-0 right-0 w-96 h-96 bg-[#D1A65E]/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-96 h-96 bg-[#10b981]/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"
    >
    </div>

    <div class="container mx-auto relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            {/* H1 - Pure HTML for instant LCP */}
            <h1
                class="text-4xl sm:text-5xl lg:text-6xl text-[#1A1A1A] mb-6 animate-fade-in"
                style="font-family: 'Playfair Display', serif; font-weight: 400;"
            >
                {title}
                {highlight && <span class="text-[#D1A65E]">{highlight}</span>}
            </h1>

            {/* Subtitle - Pure HTML */}
            {
                subtitle && (
                    <p class="text-lg sm:text-xl text-gray-700 max-w-2xl mx-auto mb-8 animate-fade-in-delayed">
                        {subtitle}
                    </p>
                )
            }
        </div>
    </div>
</section>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    }

    .animate-fade-in-delayed {
        animation: fadeIn 0.6s cubic-bezier(0.22, 1, 0.36, 1) 0.1s backwards;
    }
</style>
