---
import MainLayout from "../layouts/MainLayout.astro";
import { PageHeader } from "../components/ui/PageHeader";
import { Reveal } from "../components/ui/Reveal";
import {
    FileText,
    Clock,
    AlertCircle,
    CheckCircle2,
    Shield,
    Euro,
    Menu,
} from "lucide-react";

const sections = [
    { id: "preambule", label: "Préambule", icon: FileText },
    { id: "engagement", label: "Durée d'engagement", icon: Clock },
    { id: "services", label: "Services inclus", icon: CheckCircle2 },
    { id: "exclusivite", label: "Exclusivité", icon: Shield },
    { id: "rupture", label: "Rupture anticipée", icon: AlertCircle },
    { id: "tarifs", label: "Tarifs", icon: Euro },
];
---

<MainLayout
    title="Conditions Générales de Vente | Confluence Digitale"
    description="Conditions Générales de Vente de l'offre Partenariat Lean de Confluence Digitale."
>
    <PageHeader
        client:load
        title="Conditions Générales de Vente"
        highlight="Partenariat Lean"
        subtitle="Transparence totale sur notre modèle de partenariat MRR et nos engagements contractuels."
    />

    {/* Table des Matières Sticky */}
    <section
        class="sticky top-20 z-40 bg-white/90 backdrop-blur-md border-b border-[#E5E7EB] shadow-sm"
    >
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="py-4 overflow-x-auto">
                    <div
                        class="flex items-center gap-2 md:gap-4 min-w-max md:min-w-0 md:justify-center"
                    >
                        <Menu
                            className="w-4 h-4 text-gray-400 flex-shrink-0"
                            strokeWidth={1.5}
                        />
                        {
                            sections.map((section) => (
                                <a
                                    href={`#${section.id}`}
                                    class="text-sm px-4 py-2 rounded-lg whitespace-nowrap transition-all text-[#1A1A1A] hover:bg-[#F9FAFB] hover:text-[#D1A65E]"
                                >
                                    {section.label}
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* Contenu Principal */}
    <section
        class="relative py-12 sm:py-16 md:py-20 lg:py-24 px-4 bg-[#F9FAFB]"
    >
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto space-y-8 md:space-y-12">
                {/* Section 1 - Préambule */}
                <Reveal client:visible>
                    <div
                        id="preambule"
                        class="rounded-xl md:rounded-2xl p-6 md:p-8 bg-white border border-[#E5E7EB] scroll-mt-32"
                        style={{
                            boxShadow: "0 2px 16px 0 rgba(0, 0, 0, 0.04)",
                        }}
                    >
                        <div
                            class="flex items-start gap-3 md:gap-4 mb-4 md:mb-6"
                        >
                            <div
                                class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-[#D1A65E]/10 flex items-center justify-center flex-shrink-0"
                            >
                                <FileText
                                    className="w-5 h-5 md:w-6 md:h-6 text-[#D1A65E]"
                                    strokeWidth={1.5}
                                />
                            </div>
                            <div>
                                <h2
                                    class="text-2xl md:text-3xl text-[#1A1A1A] mb-2 font-playfair font-normal"
                                >
                                    Préambule
                                </h2>
                            </div>
                        </div>

                        <div
                            class="space-y-3 md:space-y-4 text-sm md:text-base text-gray-700"
                        >
                            <p>
                                Les présentes Conditions Générales de Vente
                                (CGV) régissent la relation contractuelle entre
                                <strong class="text-[#1A1A1A]">
                                    Confluence Digitale</strong
                                > et le Client dans le cadre de l'offre
                                <strong class="text-[#D1A65E]">
                                    "Partenariat Lean"</strong
                                >.
                            </p>
                            <p>
                                Cette offre repose sur un modèle de <strong
                                    class="text-[#1A1A1A]"
                                    >MRR (Monthly Recurring Revenue)</strong
                                > transparent :
                            </p>
                            <ul class="list-disc pl-4 md:pl-5 space-y-2">
                                <li>
                                    <strong class="text-[#1A1A1A]"
                                        >Setup initial :</strong
                                    > 0 € HT
                                </li>
                                <li>
                                    <strong class="text-[#1A1A1A]"
                                        >Abonnement mensuel :</strong
                                    > 149 € HT/mois
                                </li>
                                <li>
                                    <strong class="text-[#A32E3A]"
                                        >Engagement minimum :</strong
                                    > 24 mois ferme
                                </li>
                            </ul>
                        </div>
                    </div>
                </Reveal>

                {/* Section 2 - Durée d'engagement */}
                <Reveal client:visible delay={0.1}>
                    <div
                        id="engagement"
                        class="rounded-xl md:rounded-2xl p-6 md:p-8 bg-white border border-[#E5E7EB] scroll-mt-32"
                        style={{
                            boxShadow: "0 2px 16px 0 rgba(0, 0, 0, 0.04)",
                        }}
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-12 h-12 rounded-xl bg-[#A32E3A]/10 flex items-center justify-center flex-shrink-0"
                            >
                                <Clock
                                    className="w-6 h-6 text-[#A32E3A]"
                                    strokeWidth={1.5}
                                />
                            </div>
                            <div>
                                <h2
                                    class="text-3xl text-[#1A1A1A] mb-2 font-playfair font-normal"
                                >
                                    Durée d'engagement
                                </h2>
                            </div>
                        </div>

                        <div class="space-y-4 text-gray-700">
                            <div
                                class="p-6 bg-[#A32E3A]/5 rounded-xl border border-[#A32E3A]/20"
                            >
                                <p class="text-lg text-[#1A1A1A] mb-4">
                                    <strong>Engagement ferme de 24 mois</strong>
                                </p>
                                <p>
                                    Le contrat prend effet à la date de
                                    signature et court pour une durée minimale
                                    de
                                    <strong class="text-[#A32E3A]">
                                        24 mois consécutifs</strong
                                    >.
                                </p>
                            </div>

                            <p>Cette durée garantit :</p>
                            <ul class="space-y-2">
                                <li class="flex items-start gap-2">
                                    <span class="text-[#10b981] mt-1">✓</span>
                                    <span
                                        >Votre <strong class="text-[#1A1A1A]"
                                            >exclusivité territoriale</strong
                                        > protégée pendant toute la durée</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[#10b981] mt-1">✓</span>
                                    <span
                                        >Un <strong class="text-[#1A1A1A]"
                                            >ROI maximisé</strong
                                        > sur le long terme</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[#10b981] mt-1">✓</span>
                                    <span
                                        >Un <strong class="text-[#1A1A1A]"
                                            >investissement mutuellement
                                            rentable</strong
                                        ></span
                                    >
                                </li>
                            </ul>

                            <div class="mt-6 pt-6 border-t border-[#E5E7EB]">
                                <p class="text-sm">
                                    <strong class="text-[#1A1A1A]"
                                        >Renouvellement :</strong
                                    > À l'issue des 24 mois, le contrat se renouvelle
                                    tacitement par périodes de 12 mois, résiliable
                                    avec un préavis de 3 mois.
                                </p>
                            </div>
                        </div>
                    </div>
                </Reveal>

                {/* Section 3 - Services inclus */}
                <Reveal client:visible delay={0.2}>
                    <div
                        id="services"
                        class="rounded-2xl p-8 bg-white border border-[#E5E7EB] scroll-mt-32"
                        style={{
                            boxShadow: "0 2px 16px 0 rgba(0, 0, 0, 0.04)",
                        }}
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-12 h-12 rounded-xl bg-[#10b981]/10 flex items-center justify-center flex-shrink-0"
                            >
                                <CheckCircle2
                                    className="w-6 h-6 text-[#10b981]"
                                    strokeWidth={1.5}
                                />
                            </div>
                            <div>
                                <h2
                                    class="text-3xl text-[#1A1A1A] mb-2 font-playfair font-normal"
                                >
                                    Services inclus dans le MRR
                                </h2>
                            </div>
                        </div>

                        <div class="space-y-4 text-gray-700">
                            <p>Pour 149 € HT/mois, vous bénéficiez de :</p>

                            <div class="grid md:grid-cols-2 gap-4">
                                <div class="p-4 bg-[#F9FAFB] rounded-lg">
                                    <h3 class="text-lg text-[#1A1A1A] mb-2">
                                        Hébergement & Infrastructure
                                    </h3>
                                    <ul class="text-sm space-y-1">
                                        <li>• Hébergement haute performance</li>
                                        <li>• SSL/HTTPS inclus</li>
                                        <li>• Sauvegardes quotidiennes</li>
                                        <li>• CDN mondial</li>
                                    </ul>
                                </div>

                                <div class="p-4 bg-[#F9FAFB] rounded-lg">
                                    <h3 class="text-lg text-[#1A1A1A] mb-2">
                                        Maintenance & Sécurité
                                    </h3>
                                    <ul class="text-sm space-y-1">
                                        <li>• Mises à jour automatiques</li>
                                        <li>• Monitoring 24/7</li>
                                        <li>• Correctifs de sécurité</li>
                                        <li>• Protection anti-DDoS</li>
                                    </ul>
                                </div>

                                <div class="p-4 bg-[#F9FAFB] rounded-lg">
                                    <h3 class="text-lg text-[#1A1A1A] mb-2">
                                        Support Technique
                                    </h3>
                                    <ul class="text-sm space-y-1">
                                        <li>• Support illimité par email</li>
                                        <li>• Réponse sous 48h garantie</li>
                                        <li>• Assistance technique</li>
                                        <li>• Formation continue</li>
                                    </ul>
                                </div>

                                <div class="p-4 bg-[#F9FAFB] rounded-lg">
                                    <h3 class="text-lg text-[#1A1A1A] mb-2">
                                        Performance & SEO
                                    </h3>
                                    <ul class="text-sm space-y-1">
                                        <li>• Score 100/100 garanti</li>
                                        <li>• Optimisation continue</li>
                                        <li>• Suivi des positions Google</li>
                                        <li>• Rapports mensuels</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </Reveal>

                {/* Section 4 - Exclusivité territoriale */}
                <Reveal client:visible delay={0.3}>
                    <div
                        id="exclusivite"
                        class="rounded-2xl p-8 bg-white border border-[#E5E7EB] scroll-mt-32"
                        style={{
                            boxShadow: "0 2px 16px 0 rgba(0, 0, 0, 0.04)",
                        }}
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-12 h-12 rounded-xl bg-[#D1A65E]/10 flex items-center justify-center flex-shrink-0"
                            >
                                <Shield
                                    className="w-6 h-6 text-[#D1A65E]"
                                    strokeWidth={1.5}
                                />
                            </div>
                            <div>
                                <h2
                                    class="text-3xl text-[#1A1A1A] mb-2 font-playfair font-normal"
                                >
                                    Clause d'exclusivité territoriale
                                </h2>
                            </div>
                        </div>

                        <div class="space-y-4 text-gray-700">
                            <div
                                class="p-6 bg-[#D1A65E]/5 rounded-xl border border-[#D1A65E]/20"
                            >
                                <p class="text-lg text-[#1A1A1A] mb-4">
                                    <strong
                                        >Protection contractuelle garantie</strong
                                    >
                                </p>
                                <p>
                                    Confluence Digitale s'engage à <strong
                                        class="text-[#D1A65E]"
                                        >ne jamais accepter un concurrent direct</strong
                                    > du Client dans sa zone géographique d'intervention
                                    pendant toute la durée du contrat.
                                </p>
                            </div>

                            <p>Cette clause protège :</p>
                            <ul class="space-y-2">
                                <li class="flex items-start gap-2">
                                    <span class="text-[#D1A65E] mt-1">✓</span>
                                    <span
                                        >Votre <strong class="text-[#1A1A1A]"
                                            >positionnement unique</strong
                                        > dans votre zone</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[#D1A65E] mt-1">✓</span>
                                    <span
                                        >Votre <strong class="text-[#1A1A1A]"
                                            >stratégie SEO locale</strong
                                        > sans cannibalisation</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[#D1A65E] mt-1">✓</span>
                                    <span
                                        >Votre <strong class="text-[#1A1A1A]"
                                            >investissement marketing</strong
                                        > contre la concurrence interne</span
                                    >
                                </li>
                            </ul>

                            <div class="mt-6 pt-6 border-t border-[#E5E7EB]">
                                <p class="text-sm">
                                    <strong class="text-[#1A1A1A]"
                                        >Définition de la zone :</strong
                                    > La zone géographique est définie conjointement
                                    lors de la signature du contrat (ville, rayon
                                    30km, département, etc.).
                                </p>
                            </div>
                        </div>
                    </div>
                </Reveal>

                {/* Section 5 - Rupture anticipée */}
                <Reveal client:visible delay={0.4}>
                    <div
                        id="rupture"
                        class="rounded-2xl p-8 bg-white border border-[#E5E7EB] scroll-mt-32"
                        style={{
                            boxShadow: "0 2px 16px 0 rgba(0, 0, 0, 0.04)",
                        }}
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-12 h-12 rounded-xl bg-[#A32E3A]/10 flex items-center justify-center flex-shrink-0"
                            >
                                <AlertCircle
                                    className="w-6 h-6 text-[#A32E3A]"
                                    strokeWidth={1.5}
                                />
                            </div>
                            <div>
                                <h2
                                    class="text-3xl text-[#1A1A1A] mb-2 font-playfair font-normal"
                                >
                                    Rupture anticipée du contrat
                                </h2>
                            </div>
                        </div>

                        <div class="space-y-4 text-gray-700">
                            <div
                                class="p-6 bg-[#A32E3A]/5 rounded-xl border border-[#A32E3A]/20"
                            >
                                <p class="text-lg text-[#1A1A1A] mb-4">
                                    <strong
                                        >Résiliation anticipée impossible</strong
                                    >
                                </p>
                                <p>
                                    Le contrat ne peut être résilié avant le
                                    terme des 24 mois, sauf motif légitime prévu
                                    par la loi (cessation d'activité,
                                    liquidation judiciaire, etc.).
                                </p>
                            </div>

                            <p>En cas de rupture anticipée non justifiée :</p>
                            <ul class="space-y-2">
                                <li class="flex items-start gap-2">
                                    <span class="text-[#A32E3A] mt-1">•</span>
                                    <span
                                        >Le Client reste redevable de
                                        l'intégralité des <strong
                                            class="text-[#1A1A1A]"
                                            >mensualités restantes</strong
                                        ></span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[#A32E3A] mt-1">•</span>
                                    <span
                                        >Le site web et tous les services sont <strong
                                            class="text-[#1A1A1A]"
                                            >immédiatement suspendus</strong
                                        ></span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[#A32E3A] mt-1">•</span>
                                    <span
                                        >L'exclusivité territoriale est <strong
                                            class="text-[#1A1A1A]"
                                            >automatiquement levée</strong
                                        ></span
                                    >
                                </li>
                            </ul>

                            <div class="mt-6 pt-6 border-t border-[#E5E7EB]">
                                <p class="text-sm">
                                    <strong class="text-[#1A1A1A]"
                                        >Note :</strong
                                    > Cette clause protège notre investissement mutuel
                                    et garantit la viabilité du modèle économique
                                    pour tous nos clients.
                                </p>
                            </div>
                        </div>
                    </div>
                </Reveal>

                {/* Section 6 - Tarifs */}
                <Reveal client:visible delay={0.5}>
                    <div
                        id="tarifs"
                        class="rounded-2xl p-8 bg-white border border-[#E5E7EB] scroll-mt-32"
                        style={{
                            boxShadow: "0 2px 16px 0 rgba(0, 0, 0, 0.04)",
                        }}
                    >
                        <div class="flex items-start gap-4 mb-6">
                            <div
                                class="w-12 h-12 rounded-xl bg-[#10b981]/10 flex items-center justify-center flex-shrink-0"
                            >
                                <Euro
                                    className="w-6 h-6 text-[#10b981]"
                                    strokeWidth={1.5}
                                />
                            </div>
                            <div>
                                <h2
                                    class="text-3xl text-[#1A1A1A] mb-2 font-playfair font-normal"
                                >
                                    Tarification & Paiement
                                </h2>
                            </div>
                        </div>

                        <div class="space-y-4 text-gray-700">
                            <div
                                class="p-6 bg-[#10b981]/5 rounded-xl border border-[#10b981]/20"
                            >
                                <div class="grid md:grid-cols-2 gap-6">
                                    <div>
                                        <p class="text-sm text-gray-600 mb-2">
                                            Setup Initial
                                        </p>
                                        <p
                                            class="text-4xl text-[#10b981] font-playfair font-normal"
                                        >
                                            0 € <span class="text-xl">HT</span>
                                        </p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600 mb-2">
                                            Abonnement Mensuel
                                        </p>
                                        <p
                                            class="text-4xl text-[#1A1A1A] font-playfair font-normal"
                                        >
                                            149 € <span class="text-xl">HT</span
                                            >
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <h3 class="text-lg text-[#1A1A1A]">
                                    Modalités de paiement :
                                </h3>
                                <ul class="space-y-2">
                                    <li class="flex items-start gap-2">
                                        <span class="text-[#10b981] mt-1"
                                            >✓</span
                                        >
                                        <span
                                            ><strong class="text-[#1A1A1A]"
                                                >Prélèvement automatique mensuel</strong
                                            > le 1er de chaque mois</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="text-[#10b981] mt-1"
                                            >✓</span
                                        >
                                        <span
                                            ><strong class="text-[#1A1A1A]"
                                                >Facturation HT</strong
                                            > + TVA applicable (20%)</span
                                        >
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="text-[#10b981] mt-1"
                                            >✓</span
                                        >
                                        <span
                                            ><strong class="text-[#1A1A1A]"
                                                >Paiement par virement ou
                                                prélèvement SEPA</strong
                                            ></span
                                        >
                                    </li>
                                </ul>
                            </div>

                            <div class="mt-6 pt-6 border-t border-[#E5E7EB]">
                                <p class="text-sm">
                                    <strong class="text-[#1A1A1A]"
                                        >Révision tarifaire :</strong
                                    > Les tarifs peuvent être révisés annuellement,
                                    avec un préavis de 2 mois minimum. Le client
                                    peut alors résilier sans frais dans un délai
                                    de 30 jours.
                                </p>
                            </div>
                        </div>
                    </div>
                </Reveal>
            </div>
        </div>
    </section>
</MainLayout>
